{
  "manifest_version": 3,
  "name": "Booster Pack Creator Helper",
  "version": "3.0.0",
  "description": "Extension to create a new visualization for the Steam Booster Pack Creator page",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": [
        "content/index.js"
      ],
      "matches": [
        "https://steamcommunity.com/tradingcards/boostercreator/*"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/*.png"
      ],
      "matches": [
        "https://*/*"
      ],
      "extension_ids": []
    },
    {
      "resources": [
        "content/content.js"
      ],
      "matches": [
        "https://*/*"
      ],
      "extension_ids": []
    }
  ]
}