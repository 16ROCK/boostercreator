{
  "manifest_version": 3,
  "name": "Booster Pack Creator Helper",
  "version": "3.0.0",
  "description": "Extension to create a new visualization for the Steam Booster Pack Creator page",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": [
        "content/index.js"
      ],
      "matches": [
        "https://steamcommunity.com/tradingcards/boostercreator/*"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_title": "open Steam Booster Pack Creator page"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/*.png",
        "content/content.js",
        "options/options/*.js",
        "options/options/*.css",
        "options/options/*.html"
      ],
      "matches": [
        "https://*/*"
      ],
      "extension_ids": []
    }
  ]
}